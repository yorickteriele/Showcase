@model List<WorkExperience>

@{
    ViewData["Title"] = "Home Page";
}

<div class="page">
    <section class="personalia">
        <img class="person-logo" src="images/person-pasfoto.png">
        <h1 class="person-name">Yorick te Riele</h1>
    </section>

    <section class="profile">
        <section class="profile-content">
            <div class="profile-content__category">
                <h3 class="profile-content__category-title">Werkervaringen</h3>
                <hr>
            </div>

            @foreach (var job in Model)
            {
                <div class="profile-content__element">
                    <div class="profile-content__element-header">
                        <h4 class="profile-content__title">@job.Title</h4>
                        <p class="profile-content__period">@job.Period</p>
                    </div>
                    <p class="profile-content__institute">@job.Institute</p>
                </div>
            }
        </section>
    </section>
</div>
